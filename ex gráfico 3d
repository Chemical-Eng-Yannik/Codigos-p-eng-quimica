import matplotlib.pyplot as gr
import numpy as np 
import pylab as pl 
r = np.linspace(0.5, 3, 20)
h = np.linspace(0.1, 2, 20)

R,H = pl.meshgrid(r, h)
custo = (((2*np.pi*R**2)/np.sqrt(2))*(1+np.pi*H)**1/3)

fig = gr.figure()
dim = fig.subplots(subplot_kw={'projection':'3d'})

dim.set_xlabel('valores do raio (m)')
dim.set_ylabel('valores de altura (m)')
dim.set_zlabel('Custo')

dim.plot_surface(R, H, custo, linewidth=0, antialiased=True, cmap='Greens')
gr.show()
